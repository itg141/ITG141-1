package BasicQuestion;

public class Program1 {
	//Program to take the number at runtime and check whether the given number is positive or negative. 

	public static void main(String[] args) {
		int num=12;
		if(num>0) {
			System.out.println("The number is positive--"+num);
		}
		else if(num<0) {
			System.out.println("The number is negative--"+num);
		}
		/*else {
			System.out.println("The number "+num+"is neither positive nor negative");
		}*/

	}

}
