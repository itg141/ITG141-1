//Write a program to read in 10 numbers and compute the average, maximum and minimum values.
package neww;
import java.util.*;
public class P40 {
public static void main(String[] args) {
    Scanner scan=new Scanner(System.in);
    double average;
int  count=0, sum=0, num=0;
int max = Integer.MIN_VALUE;
int min = Integer.MAX_VALUE;   
System.out.println("Please enter the number of numbers you wish to evaluate:");
do{
if(num>max) max=num;
if(num<min) min=num;
num=scan.nextInt();
sum+=num;
count++;
}while(count<5);
 average = sum/5;
System.out.println("Your average is"+average);
System.out.println("The sum is:"+sum);    
System.out.printf("Your maximum number is %d\n",max);
System.out.printf("Your minimum number is %d\n",min);
}

}